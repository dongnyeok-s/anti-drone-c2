# 서버 설정
SIMULATOR_PORT=8080
SIMULATOR_WS_URL=ws://localhost:8080

# 로깅 설정
LOGS_DIR=./logs
LOG_ENABLED=true
LOG_CONSOLE_OUTPUT=false

# 시나리오 설정
SCENARIOS_DIR=./scenarios/generated

# 환경 설정
NODE_ENV=development

# 보안 설정 (프로덕션 환경에서는 활성화 권장)
AUTH_ENABLED=false
# AUTH_TOKEN=your-secure-token-here

CORS_ENABLED=true
CORS_ORIGIN=*

# Rate Limiting (DoS 방지)
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000

# 시뮬레이션 모드 (2D-only 버전은 INTERNAL만 지원)
SIM_MODE=INTERNAL
