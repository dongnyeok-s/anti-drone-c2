{
  "name": "counter-drone-simulator",
  "version": "1.0.0",
  "description": "대드론 C2 시뮬레이터 서버",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "batch": "ts-node src/batch/experimentRunner.ts",
    "batch:quick": "ts-node src/batch/experimentRunner.ts 5 30",
    "batch:full": "ts-node src/batch/experimentRunner.ts 50 120",
    "eval": "ts-node src/scripts/run_evaluation_experiments.ts",
    "eval:fast": "ts-node src/scripts/run_evaluation_experiments.ts --profile fast",
    "eval:full": "ts-node src/scripts/run_evaluation_experiments.ts --profile full",
    "eval:analysis": "cd ../analysis && python scripts/eval_classification_report.py",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "uuid": "^9.0.1",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.4",
    "@types/uuid": "^9.0.7",
    "@types/ws": "^8.5.10",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
